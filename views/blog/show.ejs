<% include ../partials/header %>

<div class="ui container">
    <!-- Blog post -->
    <div class="ui placeholder segment">
        <h1 class="ui center aligned icon header"><%= post.header %></h1>
        <h3>Автор: <%= post.author %></h3>
        <div class="ui form">
            <div class="fields">
                <div class="field">
                    <form action="/blog/<%= post._id %>/edit" method="GET">
                        <button class="ui mini yellow button"><i class="icon edit"></i>Редактировать</button>
                    </form>
                </div>
                <div class="field">
                    <form action="/blog/<%= post._id %>?_method=DELETE" method="POST"> 
                        <button class="ui mini red button"><i class="icon trash alternate"></i>Удалить</button>
                    </form>
                </div>
            </div>
        </div>
        <p><%= post.description %></p>
        <p><strong><%= moment(post.date).locale("ru").fromNow() %></strong></p>
        <div class="backbutton">
            <a class="ui blue button" href="/blog"><i class="icon undo"></i>Назад</a>
        </div>
    </div>
    <!-- end Blog post -->
    <!-- Blog post comments -->
    <a class="ui right floated green button" href="/blog/:id/comments/:commentId"><i class="icon edit"></i>Добавить комментарий</a>
    <div class="ui hidden divider"></div>
    <div class="ui comments">
        <h3 class="ui dividing header">Комментарии</h3>
        <div class="comment">
            <div class="content">
                <span class="author">Автор</span>
                <div class="metadata">
                    <span class="date">Дата</span>
                </div>
                <div class="text">
                    Текст комментария
                </div>
                <div class="ui form">
                    <div class="fields">
                        <div class="field">
                            <form action="" method="GET">
                                <button class="ui mini yellow basic button"><i class="icon edit"></i>Редактировать</a>
                            </form>
                        </div>
                        <div class="field">
                            <form action="" method="POST">
                                <button class="ui mini red basic button"><i class="icon trash alternate"></i>Удалить</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <!-- end Blog post comments -->
</div>

<% include ../partials/footer %>