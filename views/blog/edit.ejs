<% include ../partials/header %>

<div class="ui container">
    <form class="ui form" action="/blog/<%= post._id %>?_method=PUT" method="POST">
        <div class="field">
            <h1>Отредактируйте пост</h1>
        </div>
        <div class="field">
            <input type="text" name="post[header]" value="<%= post.header %>" required>
        </div>
        <div class="field">
            <input type="text" name="post[author]" value="<%= post.author %>" required>
        </div>
        <div class="field">
            <textarea name="post[description]" required><%= post.description %></textarea>
        </div>
        <div class="field">
            <button class="ui basic violet button">Сохранить</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>