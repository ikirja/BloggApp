<% include ../partials/header %>

<div class="ui container">
    <div class="ui placeholder segment center aligned">
        <h1 class="ui center aligned icon header">
            <i class="camera circular icon"></i>
            <p>Фотографии</p>
        </h1>
        <p>
            Периодически балуюсь кнопконажимательством.<br> Вся моя безвкусица чуть ниже. Листай, не стесняйся.
        </p>
        <button class="ui green button modalbutton"><i class="icon plus circle"></i>Добавить фото</button>
        <div class="ui modal">
            <span class="closemodal"><i class="large close icon"></i></span>
            <form class="ui form" action="/photoblog" method="POST">
                <div class="field">
                    <h1>Новый Фото пост</h1>
                </div>
                <div class="field">
                    <input type="text" name="photo[name]" placeholder="Название фото" required>
                </div>
                <div class="field">
                    <input type="text" name="photo[author]" placeholder="Ваше имя" required>
                </div>
                <div class="field">
                    <input type="text" name="photo[url]" placeholder="Ссылка на фото" required>
                </div>
                <div class="field">
                    <textarea name="photo[description]" placeholder="Описание фото" required></textarea>
                </div>
                <div class="field">
                    <button class="ui basic violet button">Добавить</button>
                </div>
            </form>
        </div>
    </div>
    
    <!-- Photos grid -->
    <div class="ui piled segment">
        <div class="ui stackable doubling four column grid">
            <% photos.sort(myFunctions.sortDescDate) %>
            <% var i = 0 %>
            <% photos.forEach(function(photo){ %>
            <div class="column">
                <a class="postlink" href="/photoblog/<%= photo._id %>">
                <div class="ui segment photo">
                    <div class="ui fluid image">
                        <img src="<%= photo.url %>">
                    </div>
                    <div class="photodata">
                        <%= photo.name %><br>
                        Автор: <%= photo.author %><br>
                        <strong><%= moment(photo.date).locale("ru").fromNow() %></strong>
                    </div>
                </div>
                </a>
            </div>
            <% i++ %>
            <% }); %>
            
