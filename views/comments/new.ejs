<% include ../partials/header %>

<div class="ui container">
    <form class="ui form" action="/<%= category %>/<%= post._id %>/comments" method="POST">
        <div class="field">
            <p>Новый комментарий:</p>
        </div>
        <div class="field">
            <input type="text" name="comment[author]" placeholder="Ваше имя" required>
        </div>
        <div class="field">
            <textarea name="comment[description]" placeholder="Комментарий" required></textarea>
        </div>
        <div class="field">
            <button class="ui basic violet button">Отправить</button>
        </div>
    </form>
</div>

<% include ../partials/footer %>